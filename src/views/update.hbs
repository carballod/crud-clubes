<h2>Edit {{ dataTeam.name }}</h2>

<form action="/update-team/{{ dataTeam.id }}">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{ dataTeam.name }}">

    <label for="country">Country</label>
    <input type="text" name="country" value="{{ dataTeam.country }}">

    <label for="adress">Adress</label>
    <input type="text" name="adress" value="{{ dataTeam.adress }}">

    <label for="website">Website</label>
    <input type="text" name="website" value="{{ dataTeam.website }}">

    <label for="founded">Founded</label>
    <input type="text" name="founded" value="{{ dataTeam.founded }}">

    <label for="clubColors">Club colors</label>
    <input type="text" name="clubColors" value="{{ dataTeam.clubColors }}">

    <label for="venue">Venue</label>
    <input type="text" name="venue" value="{{ dataTeam.venue }}">

    <label for="lastUpdated">Last update</label>
    <input type="text" name="lastUpdated" value="{{ dataTeam.lastUpdated }}">

    <button type="submit">Save</button>
</form>